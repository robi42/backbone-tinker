<% if @total: %>
  <span class="todo-count">
    <span class="number"><%= @remaining %></span>
    <span class="word"><%= if @remaining is 1 then 'item' else 'items' %></span> left.
  </span>
<% end %>
<% if @done: %>
  <span class="todo-clear">
    <a href="#">
      Clear <span class="number-done"><%= @done %></span>
      completed <span class="word-done"><%= if @done is 1 then 'item' else 'items' %></span>
    </a>
  </span>
<% end %>
