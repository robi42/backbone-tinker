<div class="todo <%= if @done then 'done' else '' %>">
  <div class="display">
    <input class="check" type="checkbox" <%= if @done then 'checked="checked"' else '' %> />
    <div class="todo-content"></div>
    <span class="todo-destroy"></span>
  </div>
  <div class="edit">
    <input class="todo-input" type="text" value="" />
  </div>
</div>
